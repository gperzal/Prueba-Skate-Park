{{!< layouts/main }}

<!-- Lista de participantes -->
<section class="container w-50 mt-5">
  <h2 class="text-white">Lista de Participantes</h2>

<div class="table-responsive animate__animated animate__fadeIn">
  <table class="table table-dark table-hover table-striped">
    <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Foto</th>
        <th scope="col">Nombre</th>
        <th scope="col">Años de experiencia</th>
        <th scope="col">Especialidad</th>
        <th scope="col">Estado</th>
      </tr>
    </thead>

    <tbody>
      {{#each skaters}}
      <tr>
          <td>{{this.id}}</td>
          <td>
            <div class="profile-picture" style="background-image: url(../{{this.foto}});"></div>
          </td>
          <td>{{this.nombre}}</td>
          <td>{{this.anos_experiencia}}</td>
          <td>{{this.especialidad}}</td>
          {{#if this.estado}}
          <td class="text-success font-weight-bold">Aprobado</td>
          {{else}}
          <td class="text-warning font-weight-bold">En revisión</td>
          {{/if}}
      </tr>
      {{/each}}
    </tbody>
   </table>
</div>
</section>
